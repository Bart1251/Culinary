{
  "compilerOptions": {
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "target": "ES6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./types"],
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}